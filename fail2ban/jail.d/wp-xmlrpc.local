# fail2ban jail configuration for nginx that bans
# for trying to exploit a vulnarability in the WordPress' `xmlrpc.php`

[wp-xmlrpc]
enabled = true
port = http,https
filter = wp-xmlrpc
logpath = %(nginx_access_log)s

# ban for 24 hours, if during
bantime  = 86400
# last 3 hours there were at least
findtime  = 10800
# 2 attempts
maxretry = 2
